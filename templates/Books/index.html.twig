{% extends 'base.html.twig' %}

{% block body %}

    {# Список книг #}
    <div class="container">
        <div class="row">
            <div class="col mt-1">
                <table class="table shadow ">
                    <thead class="thead-dark">
                    <tr style="text-align: center;">
                        <th>№</th>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Год</th>
                        <th>Авторы</th>
                        <th>Действие</th>
                    </tr>
                    {% set counter = 0 %}
                    {% for book in books %}
                        {% set counter = counter + 1 %}
                    <tr style="text-align: center;">
                        <td>{{ counter }}</td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.description }}</td>
                        <td> {{ book.publicationYear }}</td>
                        <td>
                            {% if book.authorsCount > 1 %}
                                <i>{{ book.authors|first.name }}</i> и др.
                            {% else %}
                                <i>{{ book.authors|first.name }}</i>
                            {% endif %}
                        </td>
                        <td>
                            <a href="/" class="btn btn-success btn-sm" data-toggle="modal" data-target="#editModal<?=$value['id'] ?>"><i class="fa fa-edit"></i></a>
                            <a href="/books/deleteBook/{{ book.id }}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                        {% endfor %}
                    </thead>
                </table>
            </div>
        </div>
    </div>


    {# Кнопка добавления книги #}
    <div class="row justify-content-center">
        <div class="col"></div>
        <div class="col-2 justify-content-center">
            <button class="btn btn-success mb-1 no-gutters btn-block" data-toggle="modal" data-target="#createBookNative"><i class="fa fa-plus-circle no-gutters"></i></button>
        </div>
        <div class="col"></div>
    </div>


    {# Вставка блоков с модальными окнами #}
    {# block("loginForm", "htmlForms/loginForm.html.twig") #}
{#    {{ block("addBookForm", "htmlForms/addBookForm.html.twig") }}#}
    {{ block("addBookForm", "htmlForms/addBookFormNative.html.twig") }}
    {# block("registerForm", "htmlForms/registerForm.html.twig") #}


{% endblock %}

