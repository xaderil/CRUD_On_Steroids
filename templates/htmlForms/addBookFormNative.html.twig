{% block addBookForm %}

    <div class="modal fade" tabindex="-1" role="dialog" id="createBookNative">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content shadow">
                <div class="modal-header">
                    <h5 class="modal-title">Добавление книги</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="{{ path('createBook') }}" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Название книги">
                        </div>
                        <div class="form-group">
                            <textarea type="text" class="form-control" name="description" placeholder="Краткое описание"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="publicationYear" placeholder="Год издания">
                        </div>
                        <div class="form-group" style="text-align: center;">
                            <label  class="control-label no-gutters ">Список авторов</label>
                            <div class="fields">
                                <div class="input-group help-block">
                                    <input type="text" class="form-control" name="authors[]" placeholder="Автор"/>
                                    <div class="input-group-append">
                                        <span class="btn input-group-text add-field"><i class="fa fa-plus-square"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-center">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                            <button type="submit" name="submit" class="btn btn-primary">Добавить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}